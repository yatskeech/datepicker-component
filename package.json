{
  "name": "datepicker-component",
  "version": "0.1.0",
  "type": "module",
  "description": "A customizable date picker component for React",
  "keywords": [
    "react",
    "datepicker",
    "ui",
    "component"
  ],
  "author": "Dmitry Yatskevich <dima.ja06@gmail.com>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "./dist/date-picker.cjs",
  "module": "./dist/date-picker.js",
  "types": "./dist/date-picker.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/date-picker.d.ts",
        "default": "./dist/date-picker.js"
      },
      "require": {
        "types": "./dist/date-picker.d.ts",
        "default": "./dist/date-picker.cjs"
      }
    },
    "./index.css": "./dist/date-picker.css"
  },
  "scripts": {
    "build": "tsc -b && vite build",
    "lint": "eslint . && stylelint \"**/*.{css,module.css}\"",
    "lint:fix": "eslint . --fix && stylelint \"**/*.{css,module.css}\" --fix",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "storybook": "storybook dev -p 6006",
    "storybook:test": "vitest run --project storybook",
    "unit:test": "vitest run --project unit",
    "build-storybook": "storybook build",
    "prepare": "husky"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.16",
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@eslint/js": "^9.39.1",
    "@storybook/addon-a11y": "^10.1.9",
    "@storybook/addon-docs": "^10.1.9",
    "@storybook/addon-onboarding": "^10.1.9",
    "@storybook/addon-vitest": "^10.1.9",
    "@storybook/react-vite": "^10.1.9",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/browser-playwright": "^4.0.15",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-storybook": "^10.1.9",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "prettier": "3.7.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "storybook": "^10.1.9",
    "stylelint": "^16.26.1",
    "stylelint-config-idiomatic-order": "^10.0.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-order": "^7.0.0",
    "stylelint-prettier": "^5.0.3",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.15"
  }
}
